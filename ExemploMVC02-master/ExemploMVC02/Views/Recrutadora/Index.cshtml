@{
    Layout = "~/Views/Shared/Master.cshtml";
}




@Html.ActionLink("Nova recrutadora", "Cadastro", "Recrutadora", new { @class = "btn btn-primary float-right mr-3 mb-2 mt-2" })

<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr class="bg-primary text-white">
                <th>Código</th>
                <th>Nome</th>
                <th>CPF</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ExemploMVC02.Models.Recrutadora recrutadora in @ViewBag.Recrutadoras)
            {
                <tr>
                    <td>@recrutadora.Id</td>
                    <td>@recrutadora.Nome</td>
                    <td>@recrutadora.CPF</td>
                    <td>
                        <a href="/Recrutadora/Editar?id=@recrutadora.Id" class="btn btn-outline-success">
                            Editar
                            <i class="fa fa-edit"> </i>
                        </a>

                        <a href="/Recrutadora/Excluir?id=@recrutadora.Id" class="btn btn-outline-danger">
                            Excluir
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr class="bg-primary text-white">
                <th>Código</th>
                <th>Nome</th>
                <th>CPF</th>
                <th>Ação</th>
        </tfoot>
    </table>
</div>

